# STL Analysis API Environment Configuration
# Copy this file to .env and update the values for your environment

# API Configuration
API_HOST=0.0.0.0
API_PORT=8116
API_WORKERS=4
API_RELOAD=false

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3017,http://localhost:3000,http://192.168.1.196:3017,https://mlapi.us
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./sessions
SESSION_TIMEOUT=3600  # 1 hour in seconds
MAX_SESSIONS=1000

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost/stl_analysis

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/api.log

# Redis Configuration (for caching - optional)
# REDIS_URL=redis://localhost:6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Production Configuration
ENVIRONMENT=production
DEBUG=false 